<div class="jumbotron">
    <div class="center col">
        <img src="public/assets/img/burgerFull.png" alt="Burger pic">
        <h1>Burger App</h1>
        <br>
        <h3>Add a Burger</h3>
        <form action="/" method="POST" class="create-update-form">
            <div class="form-group">
                <input type="text" name="burger_name" id="ca">
            </div>
            <button class="btn-primary">Make Burger</button>
        </form>
    </div>
</div>

<div class="row">
    <div class="col-6">
        <h2>Burgers</h2>
    <ul>
        {{#each burgers}}
        {{#unless this.devoured}}
        <li>
            {{this.id}}
            {{this.burger_name}}
            <form action="/{{this.id}}?_method=PUT" method="POST">
            <input type="hidden" name="devoured" value="true">
            <button type="submit" class="btn-primary">Devour It</button>
            </form>
        </li>
        {{/unless}}
        {{/each}}
    </ul>

    </div>
</div>